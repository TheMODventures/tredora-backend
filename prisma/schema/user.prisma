// User model definition

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile Profile?
  tokens  Token[]

  @@map("users")
}
